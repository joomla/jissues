{% extends "index.twig" %}

{% block title %}{{ parent() }} | Groups{% endblock %}

{% block prependMenu %}
    <li>
        <a class="nav-link bg-success" href="{{ uri.base.path }}project/{{ project.alias }}/addgroup">Add Group</a>
    </li>

    {{ parent() }}

{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ project.title }}</h1>
    </div>

    <h2>Access Groups</h2>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th style="width: 10%;">View</th>
            <th style="width: 10%;">Create</th>
            <th style="width: 10%;">Edit</th>
            <th style="width: 10%;">Edit own</th>
            <th style="width: 10%;">Manage</th>
            <th style="width: 10%;">Actions</th>
            {% if jdebug %}
                <th style="width: 10%;">ID</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for group in items %}
            <tr class="{{ group.system ? "info" : "" }}">
                <td>
                    <a href="{{ uri.base.path }}project/{{ project.alias }}/group/{{ group.group_id }}">{{ group.title }}</a>
                </td>

                <td class="alert {{ group.can_view ? "alert-success" : "alert-error" }}">
                    {{ group.can_view|yesno }}
                </td>
                <td class="alert {{ group.can_create ? "alert-success" : "alert-error" }}">
                    {{ group.can_create|yesno }}
                </td>
                <td class="alert {{ group.can_edit ? "alert-success" : "alert-error" }}">
                    {{ group.can_edit|yesno }}
                </td>
                <td class="alert {{ group.can_editown ? "alert-success" : "alert-error" }}">
                    {{ group.can_editown|yesno }}
                </td>
                <td class="alert {{ group.can_manage ? "alert-success" : "alert-error" }}">
                    {{ group.can_manage|yesno }}
                </td>

                <td>
                    {% if group.system %}
                        System
                    {% else %}
                        <a href="{{ uri.base.path }}project/{{ project.alias }}/group/{{ group.group_id }}/delete">Delete</a>
                    {% endif %}
                </td>

                {% if jdebug %}
                    <td>{{ group.group_id }}</td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    <div class="alert alert-error">No groups defined!</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
