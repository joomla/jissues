{% extends "index.twig" %}

{% block title %}{{ parent() }} | Icons{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>All Font Icons</h1>
    </div>

    <h2>Icons</h2>

    <div class="row">
    {% for icon in icons %}
        <div class="col-md-3 mb-2">
            <div class="card text-bg-secondary">
                <div class="card-body">
                    <span class="{{ icon }}"></span>&nbsp;{{ icon }}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

    <h2>OctIcons</h2>

    <div class="row">
    {% for icon in octicons %}
        <div class="col-md-3 mb-2">
            <div class="card text-bg-secondary">
                <div class="card-body">
                    <span class="octicon {{ icon }}"></span>&nbsp;{{ icon }}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}
