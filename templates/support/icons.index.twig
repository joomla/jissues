{% extends "index.twig" %}

{% block title %}{{ parent() }} | {{ "Icons"|_ }}{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>{{ "All Font Icons"|_ }}</h1>
    </div>

    <h2>{{ "Icons"|_ }}</h2>

    <div class="row">
    {% for icon in icons %}
        <div class="span3">
            <div class="well well-small">
                <span class="{{ icon }}"></span>&nbsp;{{ icon }}
            </div>
        </div>
    {% endfor %}
    </div>

    <h2>{{ "OctIcons"|_ }}</h2>

    <div class="row">
    {% for icon in octicons %}
        <div class="span3">
            <div class="well well-small">
                <span class="octicon {{ icon }}"></span>&nbsp;{{ icon }}
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}
