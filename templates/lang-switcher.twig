{% set baseURI = uri.base.path ~ uri.route|split("?")|first %}

<li class="pull-right lang-select dropdown-toggle">
    <div id="lang-switcher" class="ui floating dropdown labeled search icon button">
        <img class="lang-icon" src="{{ uri.base.path }}images/flags/{{ lang }}.gif" alt="{{ lang }}" title="{{ lang }}"/>
        <span class="text">{{ "Select Language"|_ }}</span>
        <span class="caret"></span>
        <div class="menu">
            {% for l in languages %}
                {% if l != lang %}
                    <a class="item" href="{{ baseURI }}?lang={{ l }}" title="{{ l }}">
                        <img src="{{ uri.base.path }}images/flags/{{ l }}.gif" />
                        {{ l }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</li>