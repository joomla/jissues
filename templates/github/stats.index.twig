{% extends "index.twig" %}

{% block title %}{{ project.title }} Stats{% endblock %}

{% block content %}

    <h2>{{ project.title }} Stats</h2>

    <table class="table table-bordered">

        {% for stats in data %}
            <tr>
                <td>{{ stats.author.type }}</td>
                <td>{{ stats.author.login }}</td>
                <td>{{ stats.total }}</td>

                {% for week in stats.weeks %}
                    <td>
                        {#{{ week.w }}<br />#}
                        {{ week.a }}<br/>
                        {{ week.d }}<br/>
                        {{ week.c }}<br/>
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
