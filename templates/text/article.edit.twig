{% extends "index.twig" %}

{% block title %}
    {{ item.article_id
    ? "Edit Article"
    : "New Article"
    }}
{% endblock %}

{% block prependMenu %}
    <li>
        <a class="btn-success" href="javascript:;" onclick="document.editForm.submit();">
            Save
        </a>
    </li>
    <li>
        <a class="btn-inverse" href="{{ uri.base.path }}text">
            Cancel
        </a>
    </li>

    {{ parent() }}

{% endblock %}

{% block content %}
    <h2>
        {{ item.article_id
        ? "Edit Article"
        : "New Article"
        }}
    </h2>

    <form method="post" action="{{ uri.base.path }}text/save" class="form-inline" name="editForm">
       <div>
        <fieldset>
            <ul class="unstyled">

                <li>
                    <label for="title">Title</label>
                    <input type="text" name="article[title]" id="title" value="{{ item.title }}" />
                </li>

                <li>
                    <label for="alias">Alias</label>
                    <input type="text" name="article[alias]" id="alias" value="{{ item.alias }}" />
                </li>

            </ul>

        </fieldset>

        {% set editorId="text" %}
        {% set editorName="article[text_md]" %}
        {% set editorPlaceholder="Article text" %}
        {% set editorText=item.text_md %}

        {% include "editor.twig" %}

        <input type="hidden" name="article[article_id]" value="{{ item.article_id }}"/>

        </div>
    </form>

{% endblock %}

{% block JavaScriptBottom %}

    {{ parent() }}

    <script type="text/javascript">
        $('a[data-toggle="tab"]').on('shown', function (e)
        {
            if('#preview' != $(e.target).attr('href')) { return; }

            var out = $('#preview');
            out.html('Loading preview...');

            $.post(
                    '/preview',
                    { text: $('#text').val() },
                    function (response) {
                        if (response.error) { out.html(response.error); }
                        else if (!response.data.length) { out.html('Invalid response.'); }
                        else { out.html(response.data); }
                    }
            );
        });
    </script>
{% endblock %}
