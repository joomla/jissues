{% extends "index.twig" %}

{% block title %}Project{% endblock %}

{% block headerText %}Projects{% endblock %}

{% block content %}

    <h2>{{ project.title }}</h2>

    Some stuff about the Project here...

    <ul class="unstyled">
        {% if project.gh_user and project.gh_project %}
            <li>
                <a href="https://github.com/{{ project.gh_user }}/{{ project.gh_project }}">
                    GitHub
                </a>
            </li>
        {% endif %}
    </ul>

{% endblock %}
