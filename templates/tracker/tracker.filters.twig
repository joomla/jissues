{% macro status(value, id, class, state) %}
  {% import "fields.twig" as fields %}

  {% set values = {0: '- Status -'|_} %}
  {% set values = values + getStatuses(state) %}

  {{ fields.select('filter-status', values, value, id, class) }}
{% endmacro %}

