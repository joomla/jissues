{% extends "index.twig" %}

{% block title %}{{ parent() }} | {{ project.title ~ ' #' ~ item.issue_number }}{% endblock %}

{% block headerText %} - {{ project.short_title }}{% endblock %}

{% block headerCSS %}
    {{ parent() }}

    {# If in debug mode, load each file individually, otherwise use the combined source loaded by the template #}
    {% if templateDebug %}
    <link rel="stylesheet" href="{{ asset('vendor/blueimp-file-upload/css/jquery.fileupload.css', 'noversion') }}" />
    <link rel="stylesheet" href="{{ asset('vendor/blueimp-file-upload/css/jquery.fileupload-ui.css', 'noversion') }}" />
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap-select/dist/css/bootstrap-select.css', 'noversion') }}" />
    <link rel="stylesheet" href="{{ asset('vendor/jquery.atwho/dist/css/jquery.atwho.css', 'noversion') }}" />
    {% endif %}

    <!-- CSS for coloured code -->
    <link rel="stylesheet" href="{{ asset('css/code.css', 'debug') }}" />
    <link rel="stylesheet" href="{{ asset('css/markitup/skins/markitup/style.css', 'debug') }}" />
    <link rel="stylesheet" href="{{ asset('css/markitup/sets/markdown/style.css', 'debug') }}" />

    <style type="text/css">
        .testForm {
            background-color: #f5f5f5;
            padding: 8px 15px;
            display: none;
        }
        .tests-success {
            color: green;
        }
        .tests-fail {
            color: red;
        }
    </style>
{% endblock %}

{% block content %}

    {% import "fields.twig" as fields %}

    <div class="page-header">
        <h1>{{ project.title }} #{{ item.issue_number }}</h1>
    </div>

    <!-- Status bar -->

    <ul class="breadcrumb">
        <li>
            <a class="btn btn-success" href="javascript:" id="submit">
                {{ 'Save'|_ }}
            </a>
        </li>
        {% if item.has_code %}
        <li>
             <a class="btn btn-danger" href="javascript:" onclick="$('#testAlterContainer').slideUp();$('#testContainer').slideToggle();">
                {{ 'Test this'|_ }}
            </a>
        </li>
        <a class="btn btn-warning" href="javascript:" onclick="$('#testContainer').slideUp();$('#testAlterContainer').slideToggle();">
                {{ 'Alter test'|_ }}
        </a>
        {% endif %}
        <li>
            <a class="btn btn-inverse" href="{{ uri.base.path ~ 'tracker/' ~ project.alias ~ '/' ~ item.issue_number }}">
                {{ 'Cancel'|_ }}
            </a>
        </li>

        {% if project.gh_user and project.gh_project %}
            <li>
                <i class="icon-github"></i>
                <a href="https://github.com/{{ project.gh_user ~ '/' ~ project.gh_project ~ '/issues/' ~ item.issue_number }}"
                   target="_blank" class="external">
                    GitHub # {{ item.issue_number }}
                </a>
            </li>
        {% endif %}
        {% if item.foreign_number %}
            <li>
                <a href="http://joomlacode.org/gf/project/joomla/tracker/?action=TrackerItemEdit&tracker_item_id={{ item.foreign_number }}"
                   target="_blank">
                    {{ translate('Foreign ID') }}
                    {{ item.foreign_number }}
                </a>
            </li>
        {% endif %}

        <li>
            {{ sprintf("%1$s opened this ticket on %2$s", item.opened_by, item.opened_date|date("j M Y")) }}
        </li>
    </ul>

    {% if item.has_code %}
        {% include "testcontainer.twig" %}
    {% endif %}

    <div class="alert alert-danger" style="display: none"></div>

    <form method="post" action="/{{ uri.route }}-save" class="form-inline" name="editForm" id="issueForm">

    {% if user.check('edit') %}
        {# Show only if the user has *full*^edit rights - e.g. not "edit own" #}
        <ul class="breadcrumb">
            <li>
                <label for="status">{{ translate('Status') }}</label>
                <select name="item[status]" id="status" class="span2">
                    {% for key, value in getStatuses() %}
                        <option {{ key == item.status ? "selected='selected'" : ""  }} value="{{ key }}">{{ value }}</option>
                    {% endfor %}
                </select>
            </li>
            <li>
                <label for="priority">{{ translate('Priority') }}</label>
                <select name="item[priority]" id="priority" class="span2">
                    {% for key, value in priorities() %}
                        <option {{ key == item.priority ? "selected='selected'" : ""  }} value="{{ key }}">{{ value }}</option>
                    {% endfor %}
                </select>
            </li>
            <li><div class="span1"></div></li>
            <li>
                <label for="rel_type">{{ translate('Item') }}</label>
                <select name="item[rel_type]" id="rel_type" class="span2">
                    <option value="0"></option>
                    {% for relType in getRelTypes() %}
                        {% set selected = item.rel_type == relType.value ? 'selected="selected"' : '' %}
                        <option {{ selected }} value="{{ relType.value }}">{{ relation(relType.text) }}</option>
                    {% endfor %}
                </select>
            </li>
            <li>
                <label for="rel_number">#</label>
                <input name="item[rel_number]" id="rel_number" type="text" class="span1" value="{{ item.rel_number }}" />
            </li>
        </ul>

        <ul class="breadcrumb">
            <li>
                <label for="build">{{ translate('Build') }}</label>
                <input name="item[build]" id="build" type="text" class="span1 validateBuild" value="{{ item.build }}" />
            </li>
            {% if item.has_code %}
                <li>
                    <label for="easy">{{ translate('Easy test') }}</label>
                    <select name="item[easy]" id="easy" class="span1">
                        <option {{ 0 == item.easy ? "selected='selected'" : ""  }} value="0">{{ '0'|yesno }}</option>
                        <option {{ 1 == item.easy ? "selected='selected'" : ""  }} value="1">{{ '1'|yesno }}</option>
                    </select>
                </li>
            {% endif %}
            {% if project.categories %}
                <li>
                    {{ fields.label('categories[]', 'Categories'|_) }}
                    {{ fields.selectCategories('categories[]', project.categories, item.categoryids) }}
                </li>
            {% endif %}

            {% if user.check('manage') %}

                {% if project.labels %}
                    <li>
                        {{ fields.label('labels', 'Labels'|_) }}
                        {{ fields.selectLabels('item[labels][]', project.labels, item.labels|split(',') , 'labels') }}
                    </li>
                {% endif %}

                {% if project.milestones %}
                    <li>
                        {{ fields.label('item[milestone_id]', 'Milestone'|_) }}
                        {{ fields.selectMilestone('item[milestone_id]', project.milestones, item.milestone_id) }}
                    </li>
                {% endif %}

            {% endif %}
        </ul>
    {% endif %}

    <div class="row-fluid">
        <div class="span11 well-small">
            <ul class="unstyled">
                <li style="padding-bottom: 10px">
                    <label for="title">{{ translate('Title') }}</label>
                    <input name="item[title]" id="title" type="text"
                    style="width: 80%; font-size: 1.2em;"
                    value="{{ item.title }}"
                    class="validateTitle" />
                </li>
                <li>
                    {% set editorId="description" %}
                    {% set previewId="previewDesc" %}
                    {% set writeId="writeDesc" %}
                    {% set editorClass="validateDescription" %}
                    {% set editorName="item[description_raw]" %}
                    {% set editorText=item.description_raw %}
                    {% set editorPlaceholder="Description text" %}

                    {% include "editor.twig" %}
                </li>
            </ul>
        </div>

        <div class="row-fluid">
            <div class="span11 well-small">
                <h4>{{ "Add a Comment"|_ }}</h4>

                {% set editorId="comment" %}
                {% set previewId="previewComment" %}
                {% set writeId="writeComment" %}
                {% set editorClass="" %}
                {% set editorName="comment" %}
                {% set editorText='' %}
                {% set editorPlaceholder="Leave a comment"|_ %}

                {% include "editor.twig" %}
                <a class="pull-right btn btn-success" href="javascript:" id="submit-bottom">{{ translate('Save') }}</a>
            </div>
        </div>

        <input type="hidden" name="item[id]" value="{{ item.id }}">
        <input type="hidden" name="item[issue_number]" value="{{ item.issue_number }}">

    </div>

    </form>

    <div class="row-fluid">
        <div class="offset1 span10">
            {% include "uploader.full.twig" %}
        </div>
    </div>

    <script type="text/x-tmpl" id="tplNewTestResult">
    </script>

    <script type="text/x-tmpl" id="tplNewAlterTestResult">
    </script>

{% endblock %}

{% block JavaScriptBottom %}
    {{ parent() }}
    {# If in debug mode, load each file individually, otherwise use the combined source loaded by the template #}
    {% if templateDebug %}
    <script src="{{ asset('vendor/markitup/markitup/jquery.markitup.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/jquery-validation/dist/jquery.validate.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-tmpl/js/tmpl.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-canvas-to-blob/js/canvas-to-blob.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-load-image/js/load-image.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-load-image/js/load-image-orientation.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-load-image/js/load-image-meta.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-load-image/js/load-image-exif.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-load-image/js/load-image-exif-map.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/vendor/jquery.ui.widget.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.iframe-transport.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.fileupload.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.fileupload-process.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.fileupload-image.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.fileupload-ui.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/blueimp-file-upload/js/jquery.fileupload-validate.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/jquery-textrange/jquery-textrange.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/bootstrap-select/dist/js/bootstrap-select.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/Caret.js/src/jquery.caret.js', 'noversion') }}"></script>
    <script src="{{ asset('vendor/jquery.atwho/dist/js/jquery.atwho.js', 'noversion') }}"></script>
    {% endif %}

    {% if lang != 'en-GB' %}
    <script src="{{ asset('js/validation/messages_' ~ lang|split('-')[0] ~ '.js', 'debug') }}"></script>
    {% endif %}

    <script src="{{ asset('css/markitup/sets/markdown/set.js', 'debug') }}"></script>
    <script src="{{ asset('js/jtracker-tmpl.js', 'debug') }}"></script>
    <script src="{{ asset('js/validation/jtracker-rules.js', 'debug') }}"></script>
    <script src="{{ asset('js/uploader-img.js', 'debug') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#description').markItUp(myMarkdownSettings);
            $('#comment').markItUp(myMarkdownSettings);
            $('#commentTest').markItUp(myMarkdownSettings);
            $('.selectpicker').selectpicker();
        });

        $('#description').focus(function() {
            $('input[name="editorId"]').val(this.id);
        });

        $('#comment').focus(function() {
            $('input[name="editorId"]').val(this.id);
        });

        $('a[data-toggle="tab"]').on('shown', function (e) {
            if ('#previewDesc' == $(e.target).attr('href')) {
                JTracker.preview('#description', '#previewDesc');
            }

            if ('#previewComment' == $(e.target).attr('href')) {
                JTracker.preview('#comment', '#previewComment');
            }
            if ('#previewTest' == $(e.target).attr('href')) {
                JTracker.preview('#commentTest', '#previewTest');
            }
        });

        // Validate and submit form
        var form = $('#issueForm');

        form.validate({
            invalidHandler: function(event, validator) {
                var e = $('div.alert-danger');

                if (validator.numberOfInvalids()) {
                    e.html('{{ 'Some fields are invalid. They have been highlighted.'|_ }}');
                    e.show();
                } else {
                    e.hide();
                }
            }
        });

        $('#submit').click(function() {
            if (form.valid()) {
                $('#submit').html('{{ 'Saving...'|_ }}');
            }
            form.submit();
        });

        $('#submit-bottom').click(function() {
            if (form.valid()) {
                $('#submit-bottom').html('{{ 'Saving...'|_ }}');
            }
            form.submit();
        });

        JTracker.setupAtJS('description', '{{ project.alias }}');
        JTracker.setupAtJS('comment', '{{ project.alias }}');
        JTracker.setupAtJS('commentTest', '{{ project.alias }}');

    </script>
{% endblock %}
