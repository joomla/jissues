{% extends "index.twig" %}

{% block title %}{{ parent() }} | {{ item.username }}{% endblock %}

{% block content %}
    <div class="btn-group float-end">
        <a class="btn btn-small" href="{{ uri.base.path }}account/edit">Edit profile</a>
        <a class="btn btn-small" href="{{ uri.base.path }}account/github-refresh">Refresh profile from GitHub</a>
    </div>

    <div class="page-header">
        <h1>My Profile</h1>
    </div>

    <div class="row-fluid">
        <div class="col-md-2">
            {{ avatar(item.username, 100) }}
        </div>
        <div class="col-md-5">
            <ul class="list-unstyled">
                <li><h2>{{ item.username }}</h2></li>
                {% if item.name %}
                    <li>{{ item.name }}</li>
                {% endif %}
                {% if item.email %}
                    <li>{{ item.email }}</li>
                {% endif %}
                {% if jdebug %}
                    <li><b>Id</b>: {{ item.id }}</li>
                {% endif %}
            </ul>
        </div>
        <div class="col-md-5">
            <ul class="list-unstyled">
                <li>
                    <span aria-hidden="true" class="fab fa-github"></span>
                    <a href="https://github.com/{{ item.username }}">{{ item.username }}</a>
                </li>
                {% if tz_offset %}
                    <li>
                        {{ 'Timezone: %1$s (GMT %2$s)'|format(item.params.timezone, tz_offset) }}
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
