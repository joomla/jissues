{% extends "index.twig" %}

{% block headerCSS %}
    <style>
        fieldset:target {
            border: 1px solid silver;
            background-color: #f5f5f5;
        }
    </style>
{% endblock %}
{% block prependMenu %}
    {% if user.check("create") %}
        <li>
            <a class="btn-success" href="javascript:;" onclick="document.configForm.submit();">
                Save
            </a>
        </li>
    {% endif %}

    {{ parent() }}

{% endblock %}

{% block content %}

    <div class="row-fluid">

        <div class="span4">
            <ul class="well nav nav-list affix">
                {% for group, fields in config %}
                    <li class="">
                        <a href="#{{ group }}">{{ group|title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="span8">

            <h2>Edit Configuration</h2>

            <form method="post" action="{{ uri.base.path }}saveconfig" class="form-horizontal" name="configForm">
                {% for group, fields in config %}
                    <fieldset id="{{ group }}">
                        <legend>{{ group|title }}</legend>
                        {% for name, value in fields %}
                            <div class="control-group">
                                <label for="config{{ group }}{{ name }}" class="control-label">{{ name|tformat }}</label>
                                <div class="controls">
                                    <input type="text" name="config[{{ group }}][{{ name }}]"
                                       id="config{{ group }}{{ name }}" value="{{ value }}"/>
                                </div>
                            </div>
                        {% endfor %}
                    </fieldset>
                {% endfor %}
            </form>

        </div>

    </div>
{% endblock %}
