{% extends "index.twig" %}

{% block title %}{{ parent() }} | Routes{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Routes</h1>
    </div>

    {% for app, maps in routes %}
        <h2>App {{ app }}</h2>
        <table>
            <tr>
                <th>Route</th>
                <th>Controller</th>
            </tr>
            {% for route, controller in maps %}
            <tr>
                <td><a href="/{{ route }}">{{ route }}</a></td>
                <td>{{ controller }}</td>
            </tr>
            {% endfor %}
        </table>
    {% endfor %}
{% endblock %}
