{
	"database": {
		"driver"  : "mysqli",
		"host"    : "$OPENSHIFT_MYSQL_DB_HOST",
		"user"    : "$OPENSHIFT_MYSQL_DB_USERNAME",
		"password": "$OPENSHIFT_MYSQL_DB_PASSWORD",
		"name"    : "$OPENSHIFT_APP_NAME",
		"prefix"  : "jooz_"
	},

    "github": {
        "client_id"    : "$JTRACKER_GITHUB_CLIENT_ID",
        "client_secret": "$JTRACKER_GITHUB_CLIENT_SECRET",
        "auth_scope"   : "public_repo",
        "accounts": [
            {
                "username": "",
                "password": ""
            }
        ]
    },

	"transifex": {
		"username": "",
		"password": "",
		"project" : ""
	},

	"renderer": {
		"type" : "twig",
		"debug": "1"
	},

	"system": {
		"list_limit" : "20",
		"gzip"       : "0",
		"offset"     : "UTC",
		"upload_dir" : "uploads"
	},

	"acl": {
		"admin_users": [
			"", ""
		],
		"secret"     : "not-used-yet"
	},

	"cli-application": {
		"colors"      : "1",
		"progress-bar": "1"
	},

	"debug": {
		"system"  : "1",
		"database": "0",
		"language": "0",
		"hooks"   : "0",
		"logging" : "0",
		"log-path": "logs",
		"admin"   : "0"
	},

	"languages": [
		"en-GB", "de-DE", "ru-RU", "nl-NL", "pt-PT", "fr-FR"
	],

	"validation": {
		"mime_types": [
			"image/png", "image/jpeg", "image/gif"
		],
		"file_size" : "1M"
	}
}
