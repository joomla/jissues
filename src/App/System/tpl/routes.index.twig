{% extends "index.twig" %}

{% block title %}{{ "Routes"|_ }}{% endblock %}

{% block content %}
    <h2>{{ "Routes"|_ }}</h2>

    {% for app, maps in routes %}
        <h3>App {{ app }}</h3>
        <table>
            <tr>
                <th>Route</th>
                <th>Controller</th>
            </tr>
            {% for route, controller in maps %}
            <tr>
                <td><a href="/{{ route }}">{{ route }}</a></td>
                <td>{{ controller }}</td>
            </tr>
            {% endfor %}
        </table>
    {% endfor %}
{% endblock %}
