{
    "name": "joomla/tracker",
    "description": "Issue tracking application extending GitHub's issues and pull requests for the Joomla! project.",
    "keywords": ["joomla", "tracker"],
    "homepage": "https://github.com/joomla/jissues",
    "license": "GPL-2.0+",
    "version": "1.0.0-beta",
    "require": {
        "php": ">=7.4,<8.3",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "joomla/application": "^2.0",
        "joomla/authentication": "^1.3",
        "joomla/console": "^2.0",
        "joomla/controller": "^2.0",
        "joomla/database": "^1.8",
        "joomla/date": "^1.2",
        "joomla/di": "^2.0",
        "joomla/event": "^2.0",
        "joomla/filter": "^2.0",
        "joomla/github": "^2.0",
        "joomla/http": "^2.0",
        "joomla/input": "^2.0",
        "joomla/model": "^2.0",
        "joomla/profiler": "^2.0",
        "joomla/registry": "^2.0",
        "joomla/renderer": "^2.0",
        "joomla/router": "^2.0",
        "joomla/string": "^2.0",
        "joomla/uri": "^2.0",
        "joomla/utilities": "^2.0",
        "joomla/view": "^2.0",
        "symfony/asset": "^5.4.21",
        "symfony/cache": "^5.4.28",
        "symfony/http-foundation": "^5.4.28",
        "twig/twig": "^3.7.1",
        "codeguy/upload": "1.3.2",
        "filp/whoops": "^2.15.3",
        "league/flysystem": "^1.0.69",
        "monolog/monolog": "^2.9",
        "kint-php/kint": "^5.0",
        "adaptive/php-text-difference": "^1.1.0",
        "laminas/laminas-diactoros": "^2.17"
    },
    "require-dev": {
        "clue/graph-composer": "^1.1.0",
        "friendsofphp/php-cs-fixer": "^3.0.2",
        "joomla/coding-standards": "2.0-rc4",
        "phpunit/phpunit": "^9.6.11",
        "squizlabs/php_codesniffer": "^2.9.2",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "1.10.43",
        "phpstan/phpstan-phpunit": "1.3.15"
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-php55": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*"
    },
    "autoload": {
        "psr-4": {
            "JTracker\\": "src/JTracker/",
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTracker\\Tests\\": "tests/tracker/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.33"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
