{
    "name": "joomla/tracker",
    "description": "Issue Tracking application built on the Joomla! Framework integrating with GitHub to replace the existing Joomlacode solution.",
    "keywords": ["joomla", "tracker"],
    "homepage": "https://github.com/joomla/jissues",
    "license": "GPL-2.0+",
    "version": "1.0.0-beta",
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "joomla/application": "~1.4",
        "joomla/controller": "~1.1",
        "joomla/database": "~1.4",
        "joomla/date": "~1.1",
        "joomla/di": "~1.1",
        "joomla/event": "~1.1",
        "joomla/filter": "~1.1",
        "joomla/github": "~1.2",
        "joomla/http": "~1.1",
        "joomla/input": "~1.1",
        "joomla/model": "~1.1",
        "joomla/profiler": "~1.1",
        "joomla/registry": "^1.4.5",
        "joomla/router": "~1.1",
        "joomla/string": "~1.3",
        "joomla/uri": "~1.1",
        "joomla/utilities": "^1.3.3",
        "joomla/view": "~1.1",
        "symfony/http-foundation": "2.8.*",
        "twig/twig": "~1.23",
        "elkuku/g11n": "2.3",
        "elkuku/console-progressbar": "1.0",
        "babdev/transifex": "~1.0",
        "codeguy/upload": "1.3.2",
        "filp/whoops": "1.*",
        "league/flysystem": "0.4.*",
        "monolog/monolog": "1.*",
        "raveren/kint": "~1.0",
        "adaptive/php-text-difference": "1.*",
        "akeneo/crowdin-api": "1.0.0-alpha3"
    },
    "require-dev": {
        "mustache/mustache": "2.1.*",
        "phpunit/phpunit"  : "4.*",
        "squizlabs/php_codesniffer": "1.*",
        "sebastian/phpcpd": "*",
        "phploc/phploc": "*",
        "clue/graph-composer": "*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\": "src/Joomla/",
            "JTracker\\": "src/JTracker/",
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTracker\\Tests\\": "tests/tracker/"
        }
    },
    "config": {
        "platform": {
            "php": "5.5.30"
        }
    }
}
