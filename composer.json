{
    "name": "joomla/tracker",
    "description": "Issue tracking application extending GitHub's issues and pull requests for the Joomla! project.",
    "keywords": ["joomla", "tracker"],
    "homepage": "https://github.com/joomla/jissues",
    "license": "GPL-2.0+",
    "version": "1.0.0-beta",
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "ext-intl": "*",
        "joomla/application": "~1.4",
        "joomla/cache": "~2.0@dev",
        "joomla/controller": "~1.1",
        "joomla/database": "~1.4",
        "joomla/date": "~1.1",
        "joomla/di": "~1.1",
        "joomla/event": "~1.1",
        "joomla/filter": "~1.1",
        "joomla/github": "~1.2",
        "joomla/http": "~1.1",
        "joomla/input": "~1.1",
        "joomla/model": "~1.1",
        "joomla/oauth2": "~1.1",
        "joomla/profiler": "~1.1",
        "joomla/registry": "^1.4.5",
        "joomla/renderer": "~2.0@dev",
        "joomla/router": "~1.1",
        "joomla/string": "~1.3",
        "joomla/uri": "~1.1",
        "joomla/utilities": "^1.3.3",
        "joomla/view": "~2.0@dev",
        "symfony/asset": "2.8.*",
        "symfony/http-foundation": "2.8.*",
        "twig/twig": "~1.23",
        "elkuku/g11n": "~3.0",
        "elkuku/console-progressbar": "1.0",
        "elkuku/crowdin-api": "~1.0",
        "babdev/transifex": "~1.0",
        "codeguy/upload": "1.3.2",
        "filp/whoops": "2.*",
        "league/flysystem": "~1.0",
        "monolog/monolog": "1.*",
        "raveren/kint": "~1.0",
        "adaptive/php-text-difference": "1.*",
        "pulse00/monolog-parser": "^0.0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.11",
        "mustache/mustache": "2.1.*",
        "phpunit/phpunit"  : "4.*",
        "squizlabs/php_codesniffer": "1.*",
        "sebastian/phpcpd": "*",
        "phploc/phploc": "*",
        "clue/graph-composer": "*"
    },
    "autoload": {
        "psr-4": {
            "JTracker\\": "src/JTracker/",
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTracker\\Tests\\": "tests/tracker/"
        }
    },
    "config": {
        "platform": {
            "php": "5.6.23"
        }
    }
}
